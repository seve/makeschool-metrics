type User {
  id: ID! @unique
  username: String! @unique
  repos: [Repo!]!
  commits: [Commit!]!
  pullRequests: [PullRequest!]!
}

type Repo {
  id: ID! @unique
  name: String!
  description: String
  languages: [String!]!
  stars: Int
  link: String!
  commits: [Commit!]!
}

type Commit {
  id: ID! @unique
  message: String!
  user: User!
  date: String!
  repo: Repo!
}

type PullRequest {
  id: ID! @unique
  author: User!
  title: String!
  merged: Boolean!
}