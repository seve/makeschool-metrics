type User {
  id: ID! @id
  username: String!
  repos: [Repo!]!
  commits: [Commit!]!
  pullRequests: [PullRequest!]!
}

type Repo {
  id: ID! @id
  name: String!
  description: String
  languages: [String!]! @scalarList(strategy: RELATION)
  stars: Int
  link: String!
  commits: [Commit!]!
}

type Commit {
  id: ID! @id
  message: String!
  user: User!
  date: String!
  repo: Repo!
}

type PullRequest {
  id: ID! @id
  author: User!
  title: String!
  merged: Boolean!
}